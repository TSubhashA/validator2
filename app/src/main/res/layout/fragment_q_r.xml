<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.QREntryFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginTop"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket Type"
                android:layout_marginRight="10dp"

                android:textColor="@color/textColor"
                android:textSize="@dimen/TextSize"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text=":"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:textSize="@dimen/TextSize" />


            <TextView
                android:id="@+id/ticket_type_fragment_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SJT"
                android:textSize="@dimen/TextSize"
                android:textColor="@color/textColor">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="@dimen/marginTop"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/fareFromto_third_activity"
                android:text="Source Stop "
                android:textColor="@color/textColor"
                android:textSize="@dimen/TextSize"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginEnd="10dp"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:textSize="@dimen/TextSize" />


            <TextView
                android:id="@+id/src_stop_fragment_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Dwarka Sector 8"
                android:textSize="@dimen/TextSize"
                android:textColor="@color/textColor">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:id="@+id/dest_ll"
            android:layout_marginLeft="@dimen/marginTop"
            android:layout_marginTop="@dimen/marginTop"

            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Destination Stop"
                android:textColor="@color/textColor"
                android:textSize="@dimen/TextSize"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text=":"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:textSize="@dimen/TextSize" />


            <TextView
                android:id="@+id/dest_stop_fragment_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kapashera Border"
                android:textSize="@dimen/TextSize"
                android:textColor="@color/textColor">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:id="@+id/fare_ll"
            android:layout_marginLeft="@dimen/marginTop"
            android:layout_marginTop="@dimen/marginTop"

            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Fare Amount "
                android:textColor="@color/textColor"
                android:textSize="@dimen/TextSize"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text=":"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:textSize="@dimen/TextSize" />


            <TextView
                android:id="@+id/fare_amout_fragment_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="15"
                android:textSize="@dimen/TextSize"
                android:textColor="@color/textColor">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bal_ll"
            android:layout_marginLeft="@dimen/marginTop"
            android:layout_marginTop="@dimen/marginTop"
android:visibility="gone"
            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Current QR Balance "
                android:textColor="@color/textColor"
                android:textSize="@dimen/TextSize"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text=":"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:textSize="@dimen/TextSize" />


            <TextView
                android:id="@+id/bal_amout_fragment_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="15"
                android:textSize="@dimen/TextSize"
                android:textColor="@color/textColor">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/marginTop"
            android:layout_marginTop="@dimen/marginTop"

            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Date of Journey "
                android:textColor="@color/textColor"
                android:textSize="@dimen/TextSize"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text=":"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:textSize="@dimen/TextSize" />


            <TextView
                android:id="@+id/date_fragment_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kapashera Border"
                android:textSize="@dimen/TextSize"
                android:textColor="@color/textColor">

            </TextView>
        </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
              android:gravity="center"
            android:layout_marginLeft="@dimen/marginTop"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginRight="@dimen/margin_left_right"
            android:weightSum="2">
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:src="@drawable/check_circle_24"/>
          </LinearLayout>



    </LinearLayout>

</FrameLayout>